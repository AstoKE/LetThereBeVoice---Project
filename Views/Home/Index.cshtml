@{
    ViewData["Title"] = "Home";
    var created = ViewBag.CreatedServers as List<LetThereBeVoice.Models.Server>;
    var joined = ViewBag.JoinedServers as List<LetThereBeVoice.Models.Server>;
}

<h2>Welcome, @ViewBag.UserName 👋</h2>

<h3>Your Created Servers</h3>
@if (created != null && created.Count > 0)
{
    <ul>
        @foreach (var server in created)
        {
            <li>@server.ServerName (Created by You)</li>
        }
    </ul>
}
else
{
    <p>You haven’t created any servers yet.</p>
    <p><a href="/Server/Create">➕ Create New Server</a></p>
}

<h3>Your Joined Servers</h3>
@if (joined != null && joined.Count > 0)
{
    <ul>
        @foreach (var server in joined)
        {
            <li><a href="/Channel/List?serverId=@server.ServerID">@server.ServerName</a></li>
        }
    </ul>
}
else
{
    <p>You haven’t joined any servers yet.</p>
	<p><a href="/Server/Join">🔗 Join Existing Server</a></p>
}

<form method="post" action="/Account/Logout">
    <button type="submit">Logout</button>
</form>
