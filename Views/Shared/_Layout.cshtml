<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - LetThereBeVoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        body {
            background-color: #000000;
            color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #111111 !important;
            border-bottom: 2px solid #ffcc00;
        }

            .navbar a {
                color: #ffcc00 !important;
            }

                .navbar a:hover {
                    color: #ffffff !important;
                }

        .btn-outline-light {
            border-color: #ffcc00;
            color: #ffcc00;
            border-radius: 12px;
        }

            .btn-outline-light:hover {
                background-color: #ffcc00;
                color: #000000;
            }

        .channel-card {
            background-color: #1a1a1a;
            border: 1px solid #444;
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(255, 204, 0, 0.1);
        }

        input, textarea {
            border-radius: 10px !important;
        }

        footer {
            background-color: #111;
            color: #999;
            border-top: 1px solid #222;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/Home/Index">LetThereBeVoice</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Server/Create">Create Server</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Server/Join">Join Server</a>
                    </li>
                </ul>
                <form method="post" action="/Account/Logout">
                    <button class="btn btn-sm btn-outline-light">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-4">
        &copy; @DateTime.Now.Year LetThereBeVoice - All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>