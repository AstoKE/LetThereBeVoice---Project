<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetThereBeVoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-secondary sticky-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" href="/Home/Index">LetThereBeVoice</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Server/Create">Create Server</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Server/Join">Join Server</a>
                        </li>
						<li class="nav-item">
							<a class="nav-link" href="/Home/RecentMessages">Recent Messages</a>
                        <li class="nav-item">
                            <a class="nav-link" href="/Stats/ChannelMessageCounts">Channel Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Stats/UserMessageStats">User Stats</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Friends
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/Friend/Friends">My Friends</a></li>
                                <li><a class="dropdown-item" href="/Friend/Requests">Incoming Requests</a></li>
                                <li><a class="dropdown-item" href="/Friend/List">Add Friends</a></li>
                            </ul>
                        </li>
                       

                    </ul>
                    <form method="post" action="/Account/Logout" class="d-flex">
                        <button type="submit" class="btn btn-sm btn-outline-warning">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid mt-4">
        @RenderBody()
        @RenderSection("Scripts", required: false)

    </main>

    <footer class="text-center text-muted py-3 mt-4 border-top border-secondary">
        <small>&copy; @DateTime.Now.Year LetThereBeVoice - All rights reserved.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
