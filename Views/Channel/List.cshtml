@model List<LetThereBeVoice.Models.Channel>
@{
    ViewData["Title"] = "Channel List";
    var serverId = ViewBag.ServerID;
}

<div class="container py-4">
    <h2 class="mb-4 text-info">Channels in This Server</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var c in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card shadow-sm bg-dark text-light border-info">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title"># @c.ChannelName</h5>
                                <p class="card-text"><small class="text-light">@c.ChannelType channel</small></p>
                                <p class="card-text">
                                    <small class="text-light">
                                        Last activity: @(c.LastActivity?.ToLocalTime().ToString("g") ?? "Never")
                                    </small>
                                </p>
                            </div>
                            <div class="mt-2">
                                <a href="/Message/List?channelId=@c.ChannelID" class="btn btn-outline-info btn-sm w-100 mb-1">Open</a>
                                <div class="d-flex justify-content-between">
                                    <a href="/Channel/Edit?id=@c.ChannelID" class="btn btn-sm btn-warning">Edit</a>
                                    <form method="post" action="/Channel/Delete?id=@c.ChannelID" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No channels found for this server.</p>
    }

    <hr class="my-4" />

    <h4 class="text-warning">Add a New Channel</h4>
    <form method="post" action="/Channel/Create" class="row g-2">
        <input type="hidden" name="serverId" value="@serverId" />
        <div class="col-md-8">
            <input name="channelName" class="form-control" placeholder="Channel Name (e.g., general)" required />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Add Channel</button>
        </div>
    </form>

    <a href="/Home/Index" class="btn btn-secondary mt-4">⬅ Back to Dashboard</a>
</div>
