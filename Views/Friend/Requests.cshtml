@model List<LetThereBeVoice.Models.Friendship>
@{
    ViewData["Title"] = "Incoming Friend Requests";
}

<h2 class="text-warning mb-4">Incoming Friend Requests</h2>

@if (!Model.Any())
{
    <p class="text-muted">No pending requests.</p>
}
else
{
    <ul class="list-group">
        @foreach (var request in Model)
        {
            <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                <div>
                    <strong>@request.Requester?.Username</strong><br />
                    <small class="text-muted">Requested: @request.RequestedAt.ToLocalTime().ToString("g")</small>
                </div>
                <div class="btn-group">
                    <a href="/Friend/Accept?id=@request.Id" class="btn btn-sm btn-success">Accept</a>
                    <a href="/Friend/Reject?id=@request.Id" class="btn btn-sm btn-danger">Reject</a>
                </div>
            </li>
        }
    </ul>
}

<a href="/Friend/List" class="btn btn-outline-info mt-4">🔍 Find More Users</a>
<a href="/Friend/Friends" class="btn btn-secondary mt-4 ms-2">👥 My Friends</a>
