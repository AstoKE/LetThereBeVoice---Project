@model List<LetThereBeVoice.Models.ViewModels.UserMessageStatsViewModel>

<h2 class="text-info">User Message Statistics</h2>

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Total Messages</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.MessageCount</td>
            </tr>
        }
    </tbody>
</table>
