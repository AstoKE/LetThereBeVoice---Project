@model List<LetThereBeVoice.Models.UserRecentActivity>

<h2 class="text-info">Recent Global Messages</h2>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Channel</th>
            <th>Message</th>
            <th>Sent At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.ChannelName</td>
                <td>@item.Content</td>
                <td>@item.SentAt.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
